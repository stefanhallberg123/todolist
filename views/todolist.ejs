  <%- include("partial/header.ejs") %>
  <body>
    <form action="/createtodo" method="post">
      <input
        type="text"
        name="item"
        placeholder="What are you doing today"
        required
      />
      <button type="submit">Comment</button>
    </form>

    <% amountTodos.forEach( (todo) => { %>
    <div>
      <li><%= todo.item %></li>

      <a href="/update/<%=todo._id%>">Update</a>
      <a href="/delete/<%=todo._id%>">Delete</a>
      <% }); %>
    </div>
    <br />
    <% for(let page = 1; page <= pageCount; page++) { %> <% if (currentPage ==
    page) { %>
    <a href="/todolist/?page=<%= page %>" class="active"><%= page %></a>
    <% } else { %>
    <a href="/todolist/?page=<%= page %>"><%= page %></a>
    <% } %> <% } %> <%- include("partial/footer.ejs") %>
  </body>
</html>
